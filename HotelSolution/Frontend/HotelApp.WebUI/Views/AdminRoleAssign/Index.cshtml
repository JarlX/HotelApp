@model List<HotelApp.EntityLayer.Concrete.AppUser>

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<table class="table table-xs mb-0">
    <thead>
    <tr>
        <th></th>
        <th>Kullanıcı Ad Soyad</th>
        <th>Şehir</th>
    </tr>
    </thead>
    <tbody>
    @{ var x = 0;}
    @foreach (var user in Model)
    {
        x++;
        <tr>
            <td><img src="/adminTheme/images/avatar/1.jpg" class=" rounded-circle mr-3" alt="">@user.Name @user.SurName</td>
            <td><a href="/RoleAssign/AssignRole/@user.Id" class="btn btn-primary">Rol Ata</a></td>
        </tr>
    }
    </tbody>
</table>