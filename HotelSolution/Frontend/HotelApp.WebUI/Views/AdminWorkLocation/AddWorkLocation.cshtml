@model CreateWorkLocationDTO

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="container text-center">
        <div class="row">
            <div class="col input-group mb-3">
                <label class="input-group-text">Otel İsmi</label>
                <input type="text" asp-for="WorkLocationName" class="form-control" />
            </div>
            <div class="col input-group mb-3">
                <label class="input-group-text">Şehir</label>
                <input type="text" asp-for="WorkLocationCity" class="form-control"/>
            </div>
        </div>
        <br/>
        <button class="btn btn-outline-primary float-right" href="/AdminWorkLocation/Index">Otel Konumu Ekle</button>
    </div>
</form>
