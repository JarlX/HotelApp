@model List<TestimonialViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görseli</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Image</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>
                <a class="btn mb-1 btn-rounded btn-outline-danger" href="/Testimonial/DeleteTestimonial/@item.TestimonialID">Sil</a>
            </td>
            <td>
                <a class="btn mb-1 btn-rounded btn-outline-success" href="/Testimonial/UpdateTestimonial/@item.TestimonialID">Güncelle</a>
            </td>
            <td>
                <button href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</button>
            </td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn mb-1 btn-rounded btn-info">Yeni Personel</a>