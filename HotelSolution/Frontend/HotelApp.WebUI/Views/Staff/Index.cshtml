@model List<StaffViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.StaffID</td>
            <td>@item.FullName</td>
            <td>@item.StaffTitle</td>
            <td>
                <a class="btn mb-1 btn-rounded btn-outline-danger" href="/Staff/DeleteStaff/@item.StaffID">Sil</a>
            </td>
            <td>
                <a class="btn mb-1 btn-rounded btn-outline-success" href="/Staff/UpdateStaff/@item.StaffID">Güncelle</a>
            </td>
            <td>
                <button href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</button>
            </td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-info">Yeni Personel</a>