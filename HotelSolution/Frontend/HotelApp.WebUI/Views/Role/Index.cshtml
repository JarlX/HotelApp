@model List<HotelApp.EntityLayer.Concrete.AppRole>

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";

}

<div class="col-lg-12">
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Rol Adı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
            </thead>
            <tbody>
            @{ var x = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <th>@x++</th>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn mb-1 btn-rounded btn-success" href="/Role/UpdateRole/@item.Id">Güncelle</a>
                    </td>
                    <td>
                        <a class="btn mb-1 btn-rounded btn-danger" href="/Role/DeleteRole/@item.Id">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a href="/Role/AddRole/" class="btn mb-1 btn-rounded btn-info">Yeni Rol ekle</a>
    </div>
</div>
