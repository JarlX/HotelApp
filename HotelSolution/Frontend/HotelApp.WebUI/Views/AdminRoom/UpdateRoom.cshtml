@model RoomUpdateDTO

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post" >
  <input type="hidden" asp-for="RoomID"/>
  <div class="container text-center">
    <div class="row">
      <div class="col input-group mb-3">
        <label class="input-group-text">Oda Görsel</label>
        <input type="text" asp-for="RoomCoverImage" class="form-control" />
      </div>
      <div class="col input-group mb-3">
        <label class="input-group-text">Oda No</label>
        <input type="text" asp-for="RoomNumber" class="form-control"/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 input-group mb-3">
        <label class="input-group-text">Oda Fiyatı</label>
        <input type="number" asp-for="Price" class="form-control"/>
      </div>
      <div class="col-md-9 input-group mb-3">
        <label class="input-group-text">Oda Başlığı</label>
        <input type="text" asp-for="Title" class="form-control"/>
      </div>
    </div>
    <div class="row">
      <div class="col input-group mb-3">
        <label class="input-group-text">Yatak Sayısı</label>
        <input  type="text" asp-for="BedCount" class="form-control"/>
      </div>
      <div class="col input-group mb-3">
        <label class="input-group-text">Banyo Sayısı</label>
        <input  type="text" asp-for="BathCount" class="form-control"/>
      </div>
      <div class="col input-group mb-3">
        <label class="input-group-text">Wifi Durumu</label>
        <select asp-for="WifiStatus">
          <option value="True">Var</option>
          <option value="False">Yok</option>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col input-group mb-3">
        <label class="input-group-text">Oda Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control"/>
      </div>
    </div>
    <br/>
    <button class="btn btn-outline-primary float-right" href="/AdminRoom/Index">Odayı Güncelle</button>
  </div>
</form>

