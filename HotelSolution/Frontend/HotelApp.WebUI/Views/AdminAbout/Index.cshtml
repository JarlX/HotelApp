@model List<AboutResultDTO>

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<h2>Hakkında</h2>
<div class="col-lg-12">
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Başlık 1</th>
                <th>Başlık 2</th>
                <th>İçerik</th>
                <th>Oda Sayısı</th>
                <th>Çalışan Sayısı</th>
                <th>Müsteri Sayısı</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Model.Count</th>
                    <td>@item.Title1</td>
                    <td>@item.Title2</td>
                    <td>@item.Content[..50]</td>
                    <td>@item.RoomCount</td>
                    <td>@item.StaffCount</td>
                    <td >@item.CustomerCount</td>
                    <td><button class="btn mb-1 btn-rounded btn-outline-info" href="">Detaylar</button></td>
                    <td>
                           <a class="btn mb-1 btn-rounded btn-success" href="/AdminAbout/UpdateAbout/@item.AboutID">Güncelle</a>
                    </td>
                    <td>
                           <a class="btn mb-1 btn-rounded btn-danger" href="/AdminAbout/DeleteAbout/@item.AboutID">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


