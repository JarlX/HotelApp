@model InboxContactDTO

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="read-content">
    <div class="media">
        <img class="mr-3 rounded-circle" src="/adminTheme/images/avatar/1.jpg">
        <div class="media-body">
            <h5 class="m-b-3">@Model.SenderName</h5>
            <p class="m-b-2">@Model.MsgDate.ToLongDateString()</p>
        </div>
    </div>
    <hr>
    <div class="media mb-4 mt-1">
        <div class="media-body"><span class="float-right">@Model.MsgDate.ToShortTimeString()</span>
            <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Mail:@Model.SenderMail</small>
        </div>
    </div>
    <p class="m-b-15">@Model.Message</p>
    <hr/>
</div>
